<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory >
  <mapping class="com.spring.model.Employees" resource="com/spring/model/Employees.hbm.xml"/>
  <mapping class="com.spring.model.Departments" resource="com/spring/model/Departments.hbm.xml"/>
  <mapping class="com.spring.model.DeptEmp" resource="com/spring/model/DeptEmp.hbm.xml"/>
  <mapping class="com.spring.model.DeptManager" resource="com/spring/model/DeptManager.hbm.xml"/>
  <mapping class="com.spring.model.Salaries" resource="com/spring/model/Salaries.hbm.xml"/>
  <mapping class="com.spring.model.Titles" resource="com/spring/model/Titles.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
